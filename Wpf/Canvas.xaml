<Window x:Class="Wpf.Canvas"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wpf"
        mc:Ignorable="d"
        Title="Canvas" Height="300" Width="300">
    <Canvas>
        <Button Canvas.Left="10" Canvas.Top="10">Top left</Button>
        <Button Canvas.Right="10" Canvas.Top="10">Top right</Button>
        <Button Canvas.Left="10" Canvas.Bottom="10">Bottom left</Button>
        <Button Canvas.Right="10" Canvas.Bottom="10">Bottom right</Button>

        <Ellipse Panel.ZIndex="2" Fill="Gainsboro" Canvas.Left="35" Canvas.Top="35" Width="200" Height="200" />
        <Rectangle Panel.ZIndex="3"  Fill="LightBlue" Canvas.Left="35" Canvas.Top="35" Width="50" Height="50" />
        <Rectangle Panel.ZIndex="4"  Fill="LightCoral" Canvas.Left="60" Canvas.Top="60" Width="50" Height="50" />
        <Rectangle Panel.ZIndex="3"  Fill="LightCyan" Canvas.Left="85" Canvas.Top="85" Width="50" Height="50" />
    </Canvas>
</Window>
